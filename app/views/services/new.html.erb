
  <div class="container" data-controller="trainers-form">
    <div class="form-wrapper d-flex flex-column align-items-center w-100 py-5 my-5">
      <h1>New Service</h1>
      <%= form_with(model: @service, url: trainer_services_path(@trainer)) do |form| %>
        <div class="service-type-container">
          <input type="radio" name="service_type" id="training-plan-switch" value="Training Plan" class="switch-input" checked data-action="click->trainers-form#toggleSession">
          <label class="switch-label" for="training-plan-switch"></label>
          <label for="training-plan-switch" class="service-type-label">Training Plan</label>
          <input type="radio" name="service_type" id="session-switch" value="Session" class="switch-input" data-action="click->trainers-form#toggleSession">
          <label class="switch-label" for="session-switch"></label>
          <label for="session-switch" class="service-type-label">Session</label>
        </div>

        <div class="form-fields training-plan-fields">
        </div>

          <div>
            <%= form.label :title, class: "form-label" %>
            <%= form.text_area :title, class: "form-field" %>
          </div>

          <div>
            <%= form.label :description, class: "form-label" %>
            <%= form.text_area :description, class: "form-field" %>
          </div>

          <div>
            <%= form.label :sport, class: "form-label" %>
            <%= form.select :sport, options_for_select(['Running', 'Cycling', 'Yoga', 'Gym', 'Tennis']), prompt: 'Select sport', class: "form-field" %>
          </div>

          <div class="form-fields session-fields d-none" data-trainers-form-target="form">
            <div>
              <%= form.label :address, class: "form-label" %>
              <%= form.text_field :address, class: "form-field" %>
            </div>

            <div>
              <%= form.label :duration, "Duration (hours)", class: "form-label" %>
              <%= form.number_field :duration, class: "form-field" %>
            </div>
          </div>

          <div>
            <%= form.label :price, class: "form-label" %>
            <%= form.number_field :price, class: "form-field" %>
          </div>

          <div>
            <%= form.label :photo, class: "form-label" %>
            <%= form.file_field :photo, class: "form-field" %>
          </div>

        <div>
          <%= form.submit "Create Service", class: "submit-button" %>
        </div>
      <% end %>
    </div>
   </div>
