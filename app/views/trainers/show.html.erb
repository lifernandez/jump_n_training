<head>

  <script src="https://kit.fontawesome.com/a071ff1fce.js" crossorigin="anonymous"></script>
</head>


<% if current_user&.trainer %>


  <div class="container">

      <div class="profile-banner d-flex mt-4">
        <% if @trainer.user.photo.attached? %>
            <%= cl_image_tag @trainer.user.photo.key, class: "card-image me-4" %>
        <% else %>
          <%= image_tag "athlete.jpg", class: "card-image me-4" %>
        <% end %>
        <div class="">
          <h1>Your Trainer Profile</h1>
          <p><strong>Sports:</strong> <%= @trainer.sports %></p>
          <p><strong>Description:</strong> <%= @trainer.description %></p>
          <% if @trainer.user == current_user %>
            <%= link_to "Add a service", new_trainer_service_path(@trainer), class: "btn"%>
          <% end %>
        </div>
      </div>

      <table class="services-table">
        <thead>
          <tr>
            <th>Type of service</th>
            <th>Price</th>
            <th>Sport</th>
            <th>Description</th>
          </tr>
        </thead>
        <tbody>
          <% @trainer.services.each do |service| %>
            <tr>
              <td><%= service.service_type %></td>
              <td><%= service.price %></td>
              <td><%= service.sport %></td>
              <td><%= service.description %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
<% else %>
  <div class="container">
    <div class="profile-banner d-flex mt-4">
      <% if @trainer.user.photo.attached? %>
        <%= cl_image_tag @trainer.user.photo.key, class: "card-image me-4" %>
      <% else %>
        <%= image_tag "athlete.jpg", class: "card-image me-4" %>
      <% end %>
      <div class="">
        <h2>Trainer Details</h2>
        <p><strong>Sports:</strong> <%= @trainer.sports %></p>
        <div class="mt-2 mb-2">
          <i class="fa-brands fa-instagram"></i>
          <i class="fa-brands fa-twitter"></i>
          <i class="fa-brands fa-facebook"></i>
        </div>
          <p class="mr-5"><strong>Description:</strong> <%= @trainer.description %></p>
      </div>
    </div>

    <div class="services-section">
      <div class="service-category">
        <h2>Sessions</h2>
        <% @trainer.services.each do |service| %>
          <% if service.service_type == "Session" %>
            <div class="service-card">
              <%= cl_image_tag service.photo.key, class: "card-image me-4" %>
              <div class="service-card-infos">
                <p><strong>Type:</strong> <%= service.service_type %></p>
                <p><strong>Price:</strong> <%= service.price %></p>
                <p><strong>Sport:</strong> <%= service.sport %></p>
                <!-- Button trigger modal -->
                    <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#exampleModal">
                      More information
                    </button>

                    <!-- Modal -->
                    <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                      <div class="modal-dialog">
                        <div class="modal-content">
                          <div class="modal-header">
                            <h5 class="modal-title" id="exampleModalLabel">Session Informations</h5>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                          </div>
                          <div class="modal-body">
                                  <h5>Location</h5>
                                  <p> <%= service.address %></p>
                                  <div style="width: 100%; height: 600px;" data-controller="map" data-map-markers-value="<%= @markers.to_json %>" data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>"></div>
                            <p><strong>Description:</strong> <%= service.description %></p>
                          </div>
                          <div class="modal-footer">
                            <button type="button" class="btn btn-primary"><%= link_to "Book", new_trainer_service_booking_path(@trainer, service), class: "btn" %></button>
                          </div>
                        </div>
                      </div>
                    </div>

              </div>
            </div>
          <% end %>
        <% end %>
      </div>

      <div class="service-category">
        <h2>Training Plans</h2>
        <% @trainer.services.each do |service| %>
          <% if service.service_type == "Training Plan" %>
            <div class="service-card">
              <%= cl_image_tag service.photo.key, class: "card-image me-4" %>
              <div class="service-card-infos">
                <p><strong>Type:</strong> <%= service.service_type %></p>
                <p><strong>Price:</strong> <%= service.price %></p>
                <p><strong>Sport:</strong> <%= service.sport %></p>
                <!-- Button trigger modal -->
                    <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#exampleModal">
                      More information
                    </button>

                    <!-- Modal -->
                    <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                      <div class="modal-dialog">
                        <div class="modal-content">
                          <div class="modal-header">
                            <h5 class="modal-title" id="exampleModalLabel">Training Plan Informations</h5>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                          </div>
                          <div class="modal-body">
                            <p><strong>Description:</strong> <%= service.description %></p>
                          </div>
                          <div class="modal-footer">
                            <button type="button" class="btn btn-primary"><%= link_to "Book", new_trainer_service_booking_path(@trainer, service), class: "btn" %></button>
                          </div>
                        </div>
                      </div>
                    </div>
              </div>
            </div>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
  <% end %>


